<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="20dip"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:padding="10dp"
            android:background="@drawable/card_view_border"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="57dp"
                android:id="@+id/flagimagecardview"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/flagimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/maxresdefault3"
                    android:background="@drawable/round_outline"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textCountryName"
                android:padding="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="London"
                android:layout_toRightOf="@+id/flagimagecardview"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                />
            <TextView
                android:id="@+id/textConnectmsc"
                android:padding="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 msc"
                android:layout_below="@+id/textCountryName"
                android:layout_toRightOf="@+id/flagimagecardview"
                android:textSize="12sp"
                android:layout_marginLeft="12dp"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>